<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="rootPane" prefHeight="268.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.assistant.ui.addbook.BookAddController">
    <children>
        <VBox prefHeight="250.0" prefWidth="405.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <TextField fx:id="title" promptText="Book Title">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="id" layoutX="20.0" layoutY="30.0" promptText="Book ID">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="author" layoutX="20.0" layoutY="30.0" promptText="Book Author">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="publisher" layoutX="20.0" layoutY="30.0" promptText="Publisher">
                    <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <HBox prefHeight="63.0" prefWidth="766.0">
                    <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#addBook" prefHeight="100.0" prefWidth="200.0" stylesheets="@addbook.css" text="Save" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" prefHeight="100.0" prefWidth="200.0" stylesheets="@addbook.css" text="Cancel" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
